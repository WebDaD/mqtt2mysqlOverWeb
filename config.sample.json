{
  "key":"my-secret-key",
  "sender": {
    "broker": {
      "host": "server",
      "port": 1883,
      "username": "user",
      "password": "pwd"
    },
    "post": {
      "host": "http://localhost",
      "port": 3000
    },
    "cache": {
      "file": "/var/mqtt2mysql/sender.json",
      "saveIntervall":"30000",
      "retry":"60000"
    }
  },
  "receiver": {
    "port":3000,
    "database":{
      "host"     : "localhost",
      "user"     : "mqtt",
      "password" : "mqtt",
      "database" : "mqtt"
    },
    "store":"/var/mqtt2mysqlOverWeb/files/",
    "ignoreInsertError": true,
    "cache": {
      "file": "/var/mqtt2mysql/receiver.json",
      "saveIntervall":"30000",
      "retry":"60000"
    },
    "aftermath": [
      "plugins/nicetables.js"
    ],
    "save2DB.js": {
      "database": {
        "host": "localhost",
        "user": "mqtt",
        "password": "mqtt",
        "database": "mqtt"
      }
    },
    "tables": [ 
      {
        "name": "tablename",
        "fields": [
          {"bez": "fieldbez", "type": "fieldtype", "parms": "fieldparameters"}
        ],
        "indices": "index-field",
        "engine": "DB-Enging"
      }
    ]
  },
  "topics": [
    {
      "topic":"some/nice/topic",
      "table":"nice"
    },
    {
      "topic":"some/real/awesome/topic",
      "table":"real"
    }
  ],
  "structure": {
    "fields": [
      {
        "field":"timestamp",
        "type":"DATETIME"
      },
      {
        "field":"title",
        "type":"VARCHAR(255)"
      }
    ],
    "indices": [
      "timestamp"
    ],
    "primary": [
      "timestamp",
      "title"
    ],
    "partioning": {
      "on":"timestamp",
      "count":10
    },
    "files" : [
      {
        "name":"image",
        "extension":"jpg",
        "folder":"/mnt/capri/images",
        "id":"title"
      }
    ]
  },
  "filter": [
    {
      "field":"title",
      "operator":"equals",
      "values": [
        "some",
        "any"
      ]
    }
  ]
}